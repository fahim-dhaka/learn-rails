<% if line_item == @current_item %>                   <!--PR148-->
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
    <td><%= line_item.quantity %>&times;</td>
    <td><%= line_item.product.title %></td>
    <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
    <!--making increment and decrement-->
    <td><%= link_to image_tag("minus_button.png"), decrease_line_item_path(line_item), :method => :put, remote: true %></td>
    <td><%= link_to image_tag("plus_button.png"), increase_line_item_path(line_item), :method => :put, remote: true %></td>
  </tr>